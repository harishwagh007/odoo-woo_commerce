<odoo>

    <!-- LIST VIEW -->
    <record id="woo_category_sync_list" model="ir.ui.view">
        <field name="name">woo.category.sync.list</field>
        <field name="model">woo.category.sync</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="woo_category_id"/>
                <field name="product_count"/>
                <field name="state"/>
                <field name="synced_on"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="woo_category_sync_form" model="ir.ui.view">
        <field name="name">woo.category.sync.form</field>
        <field name="model">woo.category.sync</field>
        <field name="priority" eval="30"/>
        <field name="arch" type="xml">
            <form string="WooCommerce Category">

                <!-- HEADER -->
                <header>
                    <button name="action_push_to_woo"
                            type="object"
                            string="Create / Update in WooCommerce"
                            class="btn-primary"/>

                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,synced,failed"/>
                </header>

                <sheet>

                    <!-- SMART BUTTON -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_products"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-cubes">
                            <field name="product_count_odoo"
                                   widget="statinfo"
                                   string="Products"/>
                        </button>
                    </div>

                    <!-- TITLE -->
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <!-- MAIN INFO -->
                    <group>
                        <group>
                            <field name="woo_category_id" readonly="1"/>
                            <field name="parent_woo_id"/>
                            <field name="slug"/>
                        </group>

                        <group>
                            <field name="instance_id"/>
                            <field name="product_count" readonly="1"/>
                            <field name="synced_on" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="General Information">
                            <group>
                                <field name="description" nolabel="1"/>
                            </group>
                        </page>

                        <page string="WooCommerce">
                            <group>
                                <field name="state"/>
                                <field name="woo_category_id"/>
                                <field name="instance_id"/>
                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
