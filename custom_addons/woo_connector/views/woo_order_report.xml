<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Search view -->
    <record id="view_woo_order_report_search" model="ir.ui.view">
        <field name="name">woo.order.report.search</field>
        <field name="model">woo.order.sync</field>
        <field name="arch" type="xml">
            <search string="Woo Orders">
                <field name="instance_id"/>
                <field name="status"/>
                <field name="customer_email"/>
                <filter name="woo_orders" string="Woo Orders"
                        domain="[('woo_order_id','!=',False)]"/>
                <filter name="cancelled" string="Cancelled"
                        domain="[('status','=','cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter name="grp_instance" string="Instance" context="{'group_by':'instance_id'}"/>
                    <filter name="grp_status" string="Status" context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot -->
    <record id="view_woo_order_report_pivot" model="ir.ui.view">
        <field name="name">woo.order.report.pivot</field>
        <field name="model">woo.order.sync</field>
        <field name="arch" type="xml">
            <pivot string="Order Report" disable_linking="False">
                <field name="total_amount" type="measure"/>
                <field name="instance_id" type="row"/>
                <field name="status" type="row"/>
                <field name="date_created" type="col" interval="month"/>
            </pivot>
        </field>
    </record>

    <!-- Graph -->
    <record id="view_woo_order_report_graph" model="ir.ui.view">
        <field name="name">woo.order.report.graph</field>
        <field name="model">woo.order.sync</field>
        <field name="arch" type="xml">
            <graph string="Order Report" type="bar" stacked="True">
                <field name="date_created" interval="month"/>
                <field name="total_amount" type="measure"/>
                <field name="status"/>
            </graph>
        </field>
    </record>

    <!-- List -->
    <record id="view_woo_order_report_tree" model="ir.ui.view">
        <field name="name">woo.order.report.tree</field>
        <field name="model">woo.order.sync</field>
        <field name="arch" type="xml">
            <list string="Woo Orders" create="false" edit="false">
                <field name="name"/>
                <field name="date_created"/>
                <field name="customer_name"/>
                <field name="customer_email"/>
                <field name="instance_id"/>
                <field name="woo_order_id"/>
                <field name="status"/>
                <field name="total_amount" sum="Total"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_woo_order_report" model="ir.actions.act_window">
        <field name="name">Order Report</field>
        <field name="res_model">woo.order.sync</field>
        <field name="view_mode">pivot,graph,list</field>
        <field name="view_id" ref="view_woo_order_report_pivot"/>
        <field name="search_view_id" ref="view_woo_order_report_search"/>
        <field name="domain">[('woo_order_id','!=',False)]</field>
        <field name="context">{'search_default_woo_orders':1, 'group_by':'status'}</field>
    </record>

    <!-- Action: Cancelled Orders -->
    <record id="action_woo_cancelled_orders" model="ir.actions.act_window">
        <field name="name">Cancelled Orders</field>
        <field name="res_model">woo.order.sync</field>
        <field name="view_mode">list,pivot,graph</field>
        <field name="view_id" ref="view_woo_order_report_tree"/>
        <field name="search_view_id" ref="view_woo_order_report_search"/>
        <field name="domain">[('woo_order_id','!=',False), ('status','=','cancelled')]</field>
        <field name="context">{'search_default_woo_orders':1, 'search_default_cancelled':1, 'group_by':'instance_id'}</field>
    </record>

</odoo>
