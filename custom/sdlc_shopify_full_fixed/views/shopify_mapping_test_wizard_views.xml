<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_shopify_mapping_test_wizard_form" model="ir.ui.view">
        <field name="name">shopify.mapping.test.wizard.form</field>
        <field name="model">shopify.mapping.test.wizard</field>
        <field name="arch" type="xml">
            <form string="Mapping Test Result">
                <sheet>
                    <field name="message" nolabel="1" readonly="1"
                           style="white-space:pre-wrap; font-family:monospace;"/>
                </sheet>
                <footer>
                    <button string="Close" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
