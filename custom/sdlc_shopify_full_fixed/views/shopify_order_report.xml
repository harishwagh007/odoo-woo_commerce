<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Search view -->
    <record id="view_shopify_order_report_search" model="ir.ui.view">
        <field name="name">shopify.order.report.search</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="shopify_instance_id"/>
                <field name="shopify_financial_status"/>
                <field name="state"/>
            </field>
            <filter name="my_sale_orders_filter" position="after">
                <separator/>
                <filter name="shopify_orders" string="Shopify Orders"
                        domain="[('shopify_order_id','!=',False)]"/>
                <filter name="cancelled" string="Cancelled"
                        domain="[('state','=','cancel')]"/>
            </filter>
            <group position="inside">
                <filter name="grp_instance" string="Instance" context="{'group_by':'shopify_instance_id'}"/>
                <filter name="grp_state" string="State" context="{'group_by':'state'}"/>
            </group>
        </field>
    </record>

    <!-- Pivot -->
    <record id="view_shopify_order_report_pivot" model="ir.ui.view">
        <field name="name">shopify.order.report.pivot</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <pivot string="Order Report" disable_linking="False">
                <field name="amount_total" type="measure"/>
                <field name="shopify_instance_id" type="row"/>
                <field name="state" type="row"/>
                <field name="shopify_cancel_reason" type="row"/>
                <field name="date_order" type="col" interval="month"/>
            </pivot>
        </field>
    </record>

    <!-- Graph -->
    <record id="view_shopify_order_report_graph" model="ir.ui.view">
        <field name="name">shopify.order.report.graph</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <graph string="Order Report" type="bar" stacked="True">
                <field name="date_order" interval="month"/>
                <field name="amount_total" type="measure"/>
                <field name="state"/>
            </graph>
        </field>
    </record>

    <!-- List -->
    <record id="view_shopify_order_report_tree" model="ir.ui.view">
        <field name="name">shopify.order.report.tree</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <list string="Shopify Orders" create="false" edit="false">
                <field name="name"/>
                <field name="date_order"/>
                <field name="partner_id"/>
                <field name="shopify_instance_id"/>
                <field name="shopify_order_id"/>
                <field name="state"/>
                <field name="shopify_financial_status"/>
                <field name="shopify_cancel_reason"/>
                <field name="amount_total" sum="Total"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_shopify_order_report" model="ir.actions.act_window">
        <field name="name">Order Report</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">pivot,graph,list</field>
        <field name="view_id" ref="view_shopify_order_report_pivot"/>
        <field name="search_view_id" ref="view_shopify_order_report_search"/>
        <field name="domain">[('shopify_order_id','!=',False)]</field>
        <field name="context">{'search_default_shopify_orders':1, 'group_by':'state'}</field>
    </record>

    <!-- Action: Cancelled Orders -->
    <record id="action_shopify_cancelled_orders" model="ir.actions.act_window">
        <field name="name">Cancelled Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,pivot,graph</field>
        <field name="view_id" ref="view_shopify_order_report_tree"/>
        <field name="search_view_id" ref="view_shopify_order_report_search"/>
        <field name="domain">[('shopify_order_id','!=',False), ('state','=','cancel')]</field>
        <field name="context">
            {
                'search_default_shopify_orders': 1,
                'search_default_cancelled': 1,
                'group_by': 'shopify_instance_id'
            }
        </field>
    </record>

    <menuitem
        id="menu_shopify_cancelled_orders"
        name="Cancelled Orders"
        parent="menu_shopify_report_data"
        action="action_shopify_cancelled_orders"
        sequence="7"
        groups="base.group_user"/>

</odoo>
