<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- SERVER ACTION TO REFRESH THEN OPEN -->
    <record id="action_shopify_inventory_report_refresh" model="ir.actions.server">
        <field name="name">Inventory Report</field>
        <field name="state">code</field>
        <field name="model_id" ref="model_shopify_inventory_report"/>
        <field name="code"><![CDATA[
threshold = float(env.context.get('inventory_threshold', 0.0) or 0.0)
instances = env['shopify.instance'].sudo().search([('active', '=', True)])
for inst in instances:
    # Pull latest quantities from Shopify and rebuild per-instance report
    inst.action_sync_inventory_levels()

action = env.ref('sdlc_shopify_connector.action_shopify_inventory_report').read()[0]
action
        ]]></field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_shopify_inventory_report_tree" model="ir.ui.view">
        <field name="name">shopify.inventory.report.tree</field>
        <field name="model">shopify.inventory.report</field>
        <field name="arch" type="xml">
            <list string="Inventory Report" create="false">
                <header>
                    <button name="action_refresh_inventory"
                            type="object"
                            string="Refresh Inventory"
                            class="btn-primary"
                            display="always"
                            />
                </header>
                <field name="status" widget="badge"/>
                <field name="product_id"/>
                <field name="sku"/>
                <field name="shopify_product_id"/>
                <field name="instance_id"/>
                <field name="shopify_available"/>
                <field name="last_sync"/>
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_shopify_inventory_report" model="ir.actions.act_window">
        <field name="name">Inventory Report</field>
        <field name="res_model">shopify.inventory.report</field>
        <field name="view_mode">list</field>
    </record>

    <!-- MENU -->
    <menuitem
        id="menu_shopify_inventory_report"
        name="Inventory"
        parent="menu_shopify_root"
        action="action_shopify_inventory_report_refresh"
        sequence="500"
        groups="base.group_user"
    />

</odoo>
