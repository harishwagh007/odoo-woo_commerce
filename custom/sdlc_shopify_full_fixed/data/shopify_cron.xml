<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
    <record id="ir_cron_shopify_auto_sync" model="ir.cron">
        <field name="name">Shopify Auto Sync</field>
        <field name="model_id" ref="model_shopify_instance"/>
        <field name="state">code</field>
        <field name="code">model.cron_auto_sync()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_shopify_tracking_refresh" model="ir.cron">
        <field name="name">Shopify Tracking Refresh</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="state">code</field>
        <field name="code">model.search([('picking_type_code','=','outgoing'), ('state','not in',('done','cancel')), ('shopify_fulfillment_id','!=',False)]).sudo().action_refresh_shopify_tracking()</field>
        <field name="interval_number">30</field>
        <field name="interval_type">minutes</field>
        <field name="active">True</field>
    </record>
    </data>
</odoo>
